@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.EngineerMachine>;

<h1>All Current Engineers & Their Machines:</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been add yet!</h3>
}


@foreach (EngineerMachine engineermachine in Model)
{
  <li>@Html.ActionLink($"{engineermachine.Engineer.Name}", "Details", new { id= engineermachine.Engineer.EngineerId })</li>
  <li>@Html.ActionLink($"{engineermachine.Machine.Description}", "Details", new { id= engineermachine.Machine.MachineId })</li>
}


<p>@Html.ActionLink("Home", "Index", "Home")</p>

