@{
  Layout = "_Layout";
}

@using Mob.Models;

<h1>Criminals</h1>

@if (@Model.Count == 0)
{
  <h3>No criminals have been added yet!</h3>
} 

<ul>
  @foreach(Criminal criminal in Model)
  {
    <li>@Html.ActionLink($"{criminal.Name}", "Details", new { id = criminal.CriminalId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new criminal", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>